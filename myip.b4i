Sub jobdone (j As HttpJob)
	If j.Success = True Then
	
	Dim parser As JSONParser 
parser.Initialize(j.GetString) 
Dim root As Map = parser.NextObject 
Label2.Text = root.Get("query") 
hd.ProgressDialogHide

	Else
		Log("fail")
	End If
End Sub