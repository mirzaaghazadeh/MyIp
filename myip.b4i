Sub GetIp 
		ht.Download("http://ip-api.com/json")
	
	If server.GetMyWifiIp <> "127.0.0.1" Then
		Label4.Text = server.GetMyWifiIp
		
		Else
			Label4.Text = "عدم اتصال به Wifi"
	End If
End Sub
